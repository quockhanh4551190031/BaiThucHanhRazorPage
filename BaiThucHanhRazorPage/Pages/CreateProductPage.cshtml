@page "/create"
@using BaiThucHanhRazorPage.Models
@model BaiThucHanhRazorPage.Pages.CreateProductPageModel

@{
    ViewData["Title"] = "Tạo sản phẩm";
}

<h1>Tạo sản phẩm</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" enctype="multipart/form-data">
            <div class="form-group">
                <label asp-for="Product.Name">Tên</label>
                <input type="text" class="form-control" asp-for="Product.Name" required />
                <span asp-validation-for="Product.Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Product.Description">Mô tả</label>
                <textarea type="text" class="form-control" asp-for="Product.Description"></textarea>
                <span asp-validation-for="Product.Description" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Product.Price">Giá</label>
                <input type="number" class="form-control" asp-for="Product.Price" required />
                <span asp-validation-for="Product.Price" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="@Model.Images">Hình ảnh (có thể chọn nhiều):</label>
                <input type="file" asp-for="@Model.Images" class="form-control" multiple />
            </div>

            <p></p>
            <button class="btn btn-primary" type="submit">Tạo</button>
        </form>

        @section Scripts {
            <partial name="_ValidationScriptsPartial" />
        }
    </div>
</div>

<p></p>

<div>
    <a class="btn btn-outline-primary" asp-page="ProductPage">Danh sách sản phẩm</a>
</div>
