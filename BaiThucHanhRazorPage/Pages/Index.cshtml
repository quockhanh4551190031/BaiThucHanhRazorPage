@page
@using BaiThucHanhRazorPage.Models
@model IndexModel
@{
    ViewData["Title"] = "Home page";
    ViewData["titleContent"] = "Trang sản phẩm";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://learn.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>

@await Html.PartialAsync("_Message")
@await Component.InvokeAsync("ProductBox", false)

@{
    var product1 = new Product() { Name = "Iphone 14 Pro", Description = "Điện thoại Apple", Price = 1000 };
    var product2 = new Product() { Name = "Samsung Galaxy", Description = "Điện thoại Samsung", Price = 500 };
    var product3 = new Product() { Name = "Sony Xperia", Description = "Điện thoại Sony", Price = 800 };
}

<div class="row">
    <div class="col">
        <partial name="_ProductItem" model="product1"/>
    </div>
    <div class="col">
        @await Html.PartialAsync("_ProductItem", product2)
    </div>
    <div class="col">
    @{
        await Html.RenderPartialAsync("_ProductItem", product3);
    }
    </div>
</div>
